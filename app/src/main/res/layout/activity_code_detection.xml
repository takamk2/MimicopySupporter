<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.local.yukichan.mimicopysupporter.ui.activity.CodeDetectionActivity">

    <Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:minHeight="60dp">

    </Toolbar>

    <FrameLayout
        android:id="@+id/fragment_display_selected_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000" />

    <FrameLayout
        android:id="@+id/fragment_display_selected_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fragment_detected_code_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/fragment_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
